{
  "compilerOptions": {
    "incremental": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "exclude": ["dist", "lib", "node_modules", "**/*.test.ts", "__tests__", "coverage", "jest.config.js"]
}
